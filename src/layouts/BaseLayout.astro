---
import { ViewTransitions } from 'astro:transitions';
import SiteHeader from '../components/SiteHeader.astro';
import SiteFooter from '../components/SiteFooter.astro';
import BackToTop from '../components/BackToTop.astro';

interface Props {
	pageTitle: string;
	description?: string;
	image?: string;
	type?: string;
	publishDate?: Date;
	modifiedDate?: Date;
}

const {
	pageTitle,
	description = "Senior software engineer specializing in technical rescue, legacy systems, and teaching assembly language since 2006.",
	image = "/og-image.svg",
	type = "website",
	publishDate,
	modifiedDate
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// Build JSON-LD structured data
const personSchema = {
	"@type": "Person",
	"name": "Steve Hill",
	"url": Astro.site?.toString(),
	"jobTitle": "Senior Software Engineer",
	"sameAs": [
		"https://github.com/stevehill1981"
	]
};

const websiteSchema = {
	"@context": "https://schema.org",
	"@type": "WebSite",
	"name": "Steve Hill",
	"url": Astro.site?.toString(),
	"author": personSchema,
	"description": "Personal website of Steve Hill - software engineering, technical rescue, and assembly language."
};

const articleSchema = type === "article" && publishDate ? {
	"@context": "https://schema.org",
	"@type": "Article",
	"headline": pageTitle,
	"description": description,
	"url": canonicalURL.toString(),
	"datePublished": publishDate.toISOString(),
	"dateModified": (modifiedDate || publishDate).toISOString(),
	"author": personSchema,
	"publisher": {
		"@type": "Person",
		"name": "Steve Hill",
		"url": Astro.site?.toString()
	},
	"image": new URL(image, Astro.site).toString()
} : null;

const jsonLd = type === "article" ? articleSchema : websiteSchema;
---
<!doctype html>
<html lang="en" data-theme="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="manifest" href="/manifest.webmanifest" />
		<meta name="theme-color" content="#8b5cf6" />
		<meta name="mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
		<link rel="apple-touch-icon" href="/icons/icon-192.svg" />
		<meta name="generator" content={Astro.generator} />

		<!-- Preconnect to Google Fonts for faster loading -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&family=Lato:wght@400;700&family=Montserrat:wght@400;500;700;900&display=swap" rel="stylesheet" />
		
		<!-- Canonical URL -->
		<link rel="canonical" href={canonicalURL} />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content={type} />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={`${pageTitle} | Steve Hill`} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={new URL(image, Astro.site)} />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={canonicalURL} />
		<meta property="twitter:title" content={`${pageTitle} | Steve Hill`} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={new URL(image, Astro.site)} />
		
		<!-- RSS Feed -->
		<link rel="alternate" type="application/rss+xml" title="Steve Hill's Blog" href="/rss.xml" />

		<!-- JSON-LD Structured Data -->
		<script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />

		<title>{pageTitle} | Steve Hill</title>
		<ViewTransitions fallback="swap" />

		<script>
			// Enhanced view transitions
			document.addEventListener('astro:page-load', () => {
				// Reinitialize any interactive components after navigation
				// This ensures functionality works after view transitions

				// Re-initialize mobile menu toggle if it exists
				const mobileToggle = document.querySelector('.mobile-menu-toggle');
				if (mobileToggle && !mobileToggle.hasAttribute('data-initialized')) {
					mobileToggle.setAttribute('data-initialized', 'true');
					// Mobile menu functionality will be handled by the SiteHeader component
				}
			});
			
			// Add transition direction based on navigation
			document.addEventListener('astro:before-preparation', (event) => {
				const fromUrl = event.from?.pathname || '';
				const toUrl = event.to?.pathname || '';
				
				// Determine transition direction
				let direction = 'forward';
				
				// Going back to blog list from post
				if (fromUrl.startsWith('/blog/') && toUrl === '/blog') {
					direction = 'back';
				}
				// Going back to home from any page
				else if (toUrl === '/' && fromUrl !== '/') {
					direction = 'back';
				}
				// Going to a post from blog list
				else if (fromUrl === '/blog' && toUrl.startsWith('/blog/')) {
					direction = 'forward';
				}
				
				// Apply direction class for CSS to use
				document.documentElement.setAttribute('data-transition-direction', direction);
			});
			
			// Clean up after transition
			document.addEventListener('astro:after-swap', () => {
				document.documentElement.removeAttribute('data-transition-direction');
			});
		</script>
	</head>
	<body>
		<a href="#main-content" class="skip-link">Skip to main content</a>
		<SiteHeader />
		<main id="main-content" data-pagefind-body style="view-transition-name: main-content;">
			<slot />
		</main>
		<SiteFooter />
		<BackToTop />
		<style is:global>
			*, *::before, *::after {
				box-sizing: border-box;
			}

			/* Skip link for accessibility */
			.skip-link {
				position: absolute;
				top: -100%;
				left: var(--spacing-md);
				z-index: 1000;
				padding: var(--spacing-sm) var(--spacing-md);
				background: var(--color-primary);
				color: white;
				font-weight: var(--font-weight-semibold);
				border-radius: var(--radius-md);
				text-decoration: none;
				transition: top var(--transition-fast);
			}

			.skip-link:focus {
				top: var(--spacing-md);
				outline: 2px solid white;
				outline-offset: 2px;
			}

			:root {
				/* Typography scale */
				--font-size-xs: 0.75rem;
				--font-size-sm: 0.875rem;
				--font-size-base: 1rem;
				--font-size-lg: 1.125rem;
				--font-size-xl: 1.25rem;
				--font-size-2xl: 1.5rem;
				--font-size-3xl: 1.875rem;
				--font-size-4xl: 2.25rem;
				--font-size-5xl: 3rem;

				/* Line heights */
				--line-height-tight: 1.25;
				--line-height-snug: 1.375;
				--line-height-normal: 1.5;
				--line-height-relaxed: 1.625;
				--line-height-loose: 1.75;

				/* Font weights */
				--font-weight-normal: 400;
				--font-weight-medium: 500;
				--font-weight-semibold: 600;
				--font-weight-bold: 700;

				/* Spacing */
				--spacing-xs: 0.5rem;
				--spacing-sm: 0.75rem;
				--spacing-md: 1rem;
				--spacing-lg: 1.5rem;
				--spacing-xl: 2rem;
				--spacing-2xl: 3rem;

				/* Button padding - standardized patterns */
				--btn-padding-icon: 0.5rem;
				--btn-padding-sm: 0.25rem 0.75rem;
				--btn-padding-md: 0.5rem 0.75rem;
				--btn-padding-lg: 0.75rem 1rem;
				--tag-padding: 0.25rem 0.625rem;
				--tag-padding-sm: 0.125rem 0.375rem;

				/* Content width */
				--content-width: 65ch;
				--wide-content-width: 80ch;

				/* Border radius */
				--radius-sm: 0.25rem;
				--radius-md: 0.375rem;
				--radius-lg: 0.5rem;
				--radius-xl: 0.75rem;
				--radius-2xl: 1rem;
				--radius-full: 9999px;

				/* Transitions */
				--transition-fast: 150ms cubic-bezier(0.4, 0, 0.2, 1);
				--transition-base: 200ms cubic-bezier(0.4, 0, 0.2, 1);
				--transition-slow: 300ms cubic-bezier(0.4, 0, 0.2, 1);

				/* Colors - Dark-only theme optimized for bold gradients */
				--color-bg-primary: #0a0a0a;      /* Near-black base */
				--color-bg: #0f0f0f;
				--color-bg-secondary: #171717;
				--color-bg-surface: #1a1a1a;      /* Cards/elevated surfaces */
				--color-bg-tertiary: #262626;     /* Subtle variations */
				--color-surface: #1a1a1a;
				--color-surface-hover: #262626;
				--color-border: #404040;
				--color-border-hover: #525252;

				--color-text-primary: #f3f4f6;    /* High contrast white */
				--color-text-secondary: #d1d5db;  /* Readable gray */
				--color-text-tertiary: #9ca3af;   /* Muted gray */
				--color-text-muted: #6b7280;

				--color-primary: #60a5fa;
				--color-primary-hover: #93bbfc;
				--color-primary-light: #1e3a5f;
				--color-primary-dark: #93bbfc;

				--color-accent: #a78bfa;
				--color-accent-hover: #c4b5fd;
				--color-accent-light: #2e1065;

				--color-success: #10b981;
				--color-warning: #f59e0b;
				--color-error: #ef4444;

				/* Gradient Palettes */
				--gradient-sunrise: linear-gradient(135deg, #8b5cf6 0%, #ec4899 100%);
				--gradient-sunrise-vibrant: linear-gradient(135deg, #a78bfa 0%, #f472b6 50%, #fb923c 100%);
				--gradient-ocean: linear-gradient(135deg, #3b82f6 0%, #06b6d4 100%);
				--gradient-sunset: linear-gradient(135deg, #f59e0b 0%, #ef4444 100%);
				--gradient-forest: linear-gradient(135deg, #10b981 0%, #14b8a6 100%);
				--gradient-tropical: linear-gradient(135deg, #ec4899 0%, #f97316 100%);
				--gradient-cosmic: linear-gradient(135deg, #8b5cf6 0%, #6366f1 100%);
				--gradient-neon: linear-gradient(135deg, #06b6d4 0%, #3b82f6 100%);

				/* Gradient colors for fine-grained control */
				--color-purple: #8b5cf6;
				--color-pink: #ec4899;
				--color-blue: #3b82f6;
				--color-cyan: #06b6d4;
				--color-orange: #f59e0b;
				--color-red: #ef4444;
				--color-green: #10b981;
				--color-teal: #14b8a6;

				/* Shadows */
				--shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.3);
				--shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.4), 0 2px 4px -1px rgba(0, 0, 0, 0.3);
				--shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.4), 0 4px 6px -2px rgba(0, 0, 0, 0.3);
				--shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.4), 0 10px 10px -5px rgba(0, 0, 0, 0.3);

				/* Code block colors (Slate palette for syntax highlighting) */
				--code-bg: #0f172a;
				--code-bg-hover: #1e293b;
				--code-border: #1e293b;
				--code-text: #e2e8f0;
				--code-text-muted: #64748b;
				--code-text-subtle: #94a3b8;
				--code-text-bright: #cbd5e1;
				--code-button-border: #334155;
				--code-button-border-hover: #475569;

				/* Syntax highlighting tokens (VS Code Dark+ inspired) */
				--syntax-comment: #6a9955;
				--syntax-keyword: #569cd6;
				--syntax-string: #ce9178;
				--syntax-number: #b5cea8;
				--syntax-function: #dcdcaa;
				--syntax-class: #4ec9b0;
				--syntax-operator: #d4d4d4;
				--syntax-punctuation: #d4d4d4;
				--syntax-variable: #9cdcfe;
				--syntax-constant: #4fc1ff;
				--syntax-property: #9cdcfe;
				--syntax-tag: #569cd6;
				--syntax-attr-name: #9cdcfe;
				--syntax-attr-value: #ce9178;
				--syntax-builtin: #4ec9b0;
				--syntax-regex: #d16969;
				--syntax-important: #569cd6;
				--syntax-boolean: #569cd6;
				--syntax-null: #569cd6;
				--syntax-selector: #d7ba7d;
				--syntax-char: #ce9178;
				--syntax-deleted: #f44747;
				--syntax-inserted: #608b4e;

				/* Print colors */
				--print-code-bg: #f5f5f5;
			}
			
			html {
				overflow-x: hidden;
			}

			body {
				font-family: 'Inter', system-ui, sans-serif;
				background: var(--color-bg-secondary);
				color: var(--color-text-primary);
				margin: 0;
				min-height: 100vh;
				font-size: var(--font-size-lg);
				line-height: var(--line-height-relaxed);
				text-rendering: optimizeLegibility;
				-webkit-font-smoothing: antialiased;
				-moz-osx-font-smoothing: grayscale;
				display: flex;
				flex-direction: column;
				overflow-x: hidden;
			}

			main {
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 var(--spacing-md) var(--spacing-xl) var(--spacing-md);
				background: transparent;
				flex: 1;
				width: 100%;
				box-sizing: border-box;
			}

			@media (min-width: 768px) {
				main {
					padding: 0 var(--spacing-lg) var(--spacing-2xl) var(--spacing-lg);
				}
			}
			
			/* Prose content */
			article {
				max-width: var(--content-width);
				margin: 0 auto;
			}
			
			/* Headings */
			h1, h2, h3, h4, h5, h6 {
				color: var(--color-text-primary);
				line-height: var(--line-height-tight);
				letter-spacing: -0.02em;
			}
			
			h1 {
				font-family: 'Montserrat', system-ui, sans-serif;
				font-weight: var(--font-weight-bold);
				font-size: var(--font-size-4xl);
				margin-top: 0;
				margin-bottom: var(--spacing-lg);
			}
			
			h2 {
				font-family: 'Montserrat', system-ui, sans-serif;
				font-weight: var(--font-weight-bold);
				font-size: var(--font-size-3xl);
				margin-top: var(--spacing-2xl);
				margin-bottom: var(--spacing-md);
			}

			h3 {
				font-family: 'Montserrat', system-ui, sans-serif;
				font-weight: var(--font-weight-bold);
				font-size: var(--font-size-2xl);
				margin-top: var(--spacing-xl);
				margin-bottom: var(--spacing-sm);
			}

			h4 {
				font-family: 'Montserrat', system-ui, sans-serif;
				font-weight: var(--font-weight-bold);
				font-size: var(--font-size-xl);
				margin-top: var(--spacing-lg);
				margin-bottom: var(--spacing-sm);
			}
			
			/* Paragraphs and lists */
			p {
				font-size: var(--font-size-lg);
				line-height: var(--line-height-relaxed);
				margin-bottom: var(--spacing-lg);
				color: var(--color-text-secondary);
			}
			
			ul, ol {
				font-size: var(--font-size-lg);
				line-height: var(--line-height-relaxed);
				margin-bottom: var(--spacing-lg);
				padding-left: var(--spacing-xl);
			}
			
			li {
				margin-bottom: var(--spacing-xs);
			}
			
			/* Links */
			a {
				color: var(--color-primary);
				text-decoration: none;
				font-weight: var(--font-weight-medium);
				transition: all 0.2s;
				text-underline-offset: 0.2em;
			}
			
			a:hover {
				color: var(--color-primary-hover);
				text-decoration: underline;
			}
			
			/* Code */
			code, pre {
				font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', 'Consolas', monospace;
			}
			
			/* Improve readability for long content */
			article p,
			article li {
				max-width: var(--content-width);
			}
			
			/* Better spacing between paragraphs and lists */
			p + ul,
			p + ol,
			ul + p,
			ol + p {
				margin-top: var(--spacing-lg);
			}
			.post-list {
				list-style: none;
				padding: 0;
			}
			.post-list li {
				margin-bottom: var(--spacing-xl);
				padding-bottom: var(--spacing-xl);
				border-bottom: 1px solid var(--color-border);
			}
			.post-list li:last-child {
				border-bottom: none;
			}
			.post-title {
				font-size: var(--font-size-2xl);
				font-weight: var(--font-weight-semibold);
				margin-bottom: var(--spacing-xs);
				line-height: var(--line-height-tight);
			}
			.post-title a {
				color: var(--color-text-primary);
				text-decoration: none;
			}
			.post-title a:hover {
				color: var(--color-primary);
				text-decoration: none;
			}
			.post-meta {
				font-size: var(--font-size-sm);
				color: var(--color-text-tertiary);
				margin-bottom: var(--spacing-sm);
				font-weight: var(--font-weight-normal);
			}
			.post-excerpt {
				color: var(--color-text-secondary);
				line-height: var(--line-height-relaxed);
				font-size: var(--font-size-base);
				max-width: var(--content-width);
			}
			.tags {
				display: flex;
				flex-wrap: wrap;
				gap: var(--spacing-xs);
				margin-top: var(--spacing-sm);
			}
			.tag {
				background: var(--color-bg-tertiary);
				padding: var(--tag-padding);
				border-radius: var(--radius-md);
				font-size: var(--font-size-sm);
				color: var(--color-text-secondary);
				text-decoration: none;
				transition: all var(--transition-base);
				font-weight: var(--font-weight-medium);
				border: 1px solid transparent;
			}
			.tag:hover {
				background: var(--color-primary-light);
				color: var(--color-primary-dark);
				text-decoration: none;
				border-color: var(--color-primary);
			}
			
			/* Gradient text utility with fallbacks */
			.gradient-text {
				color: var(--color-purple); /* Fallback for browsers without background-clip support */
				background: var(--gradient-sunrise);
				-webkit-background-clip: text;
				background-clip: text;
				-webkit-text-fill-color: transparent;
				color: transparent;
			}

			/* Animations */
			@keyframes fadeIn {
				from {
					opacity: 0;
					transform: translateY(10px);
				}
				to {
					opacity: 1;
					transform: translateY(0);
				}
			}
			
			@keyframes slideIn {
				from {
					opacity: 0;
					transform: translateX(-20px);
				}
				to {
					opacity: 1;
					transform: translateX(0);
				}
			}
			
			/* Apply fade-in to main content */
			main > * {
				animation: fadeIn var(--transition-slow) ease-out;
			}
			
			/* Stagger animations for lists */
			.card-grid > *,
			.project-grid > * {
				animation: fadeIn var(--transition-slow) ease-out;
				animation-fill-mode: both;
			}
			
			.card-grid > *:nth-child(1) { animation-delay: 0ms; }
			.card-grid > *:nth-child(2) { animation-delay: 50ms; }
			.card-grid > *:nth-child(3) { animation-delay: 100ms; }
			.card-grid > *:nth-child(4) { animation-delay: 150ms; }
			.card-grid > *:nth-child(5) { animation-delay: 200ms; }
			.card-grid > *:nth-child(6) { animation-delay: 250ms; }
			
			/* Smooth scroll behavior */
			html {
				scroll-behavior: smooth;
			}
			
			/* Add hover scale to interactive elements */
			button,
			.card,
			.project-card,
			.social-link {
				transition: transform var(--transition-fast);
			}
			
			button:active,
			.social-link:active {
				transform: scale(0.95);
			}
			
			/* Improve focus states */
			a:focus-visible,
			button:focus-visible,
			input:focus-visible,
			select:focus-visible,
			textarea:focus-visible,
			[tabindex]:focus-visible {
				outline: 3px solid var(--color-primary);
				outline-offset: 3px;
				border-radius: var(--radius-sm);
			}

			/* Enhanced focus for cards and interactive containers */
			.card:focus-within,
			.project-card:focus-within,
			.nav-link:focus-visible {
				outline: 3px solid var(--color-primary);
				outline-offset: 2px;
				box-shadow: 0 0 0 6px rgba(96, 165, 250, 0.2);
			}

			/* Focus indicator for tag links */
			.tag:focus-visible {
				outline: 2px solid var(--color-primary);
				outline-offset: 1px;
				background: var(--color-primary-light);
			}
			
			/* Code block styling */
			.astro-code,
			.astro-code span {
				color: var(--shiki-dark, inherit) !important;
				background-color: var(--shiki-dark-bg, inherit) !important;
			}

			.enhanced-code-block {
				background: var(--code-bg);
			}

			.code-toolbar {
				background: var(--code-bg);
				border-bottom-color: var(--code-border);
			}

			:not(pre) > code {
				background: var(--color-bg-tertiary);
				color: var(--color-accent);
			}

			/* CSS Highlights API - Syntax Highlighting */
			::highlight(token-comment) {
				color: var(--syntax-comment);
				font-style: italic;
			}

			::highlight(token-keyword) {
				color: var(--syntax-keyword);
				font-weight: 600;
			}

			::highlight(token-string) {
				color: var(--syntax-string);
			}

			::highlight(token-number) {
				color: var(--syntax-number);
			}

			::highlight(token-function) {
				color: var(--syntax-function);
			}

			::highlight(token-class-name) {
				color: var(--syntax-class);
			}

			::highlight(token-operator) {
				color: var(--syntax-operator);
			}

			::highlight(token-punctuation) {
				color: var(--syntax-punctuation);
			}

			::highlight(token-variable) {
				color: var(--syntax-variable);
			}

			::highlight(token-constant) {
				color: var(--syntax-constant);
			}

			::highlight(token-property) {
				color: var(--syntax-property);
			}

			::highlight(token-tag) {
