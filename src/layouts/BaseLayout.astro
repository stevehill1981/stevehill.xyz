---
import { ViewTransitions } from 'astro:transitions';
import SiteHeader from '../components/SiteHeader.astro';

interface Props {
	pageTitle: string;
	description?: string;
	image?: string;
	type?: string;
}

const { 
	pageTitle, 
	description = "Steve Hill - Software Engineer, Storyteller, Explorer",
	image = "/favicon.svg",
	type = "website"
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&family=Lato:wght@400;700&family=Montserrat:wght@700&display=swap" rel="stylesheet" />
		
		<!-- Canonical URL -->
		<link rel="canonical" href={canonicalURL} />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content={type} />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={`${pageTitle} | Steve Hill`} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={new URL(image, Astro.site)} />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={canonicalURL} />
		<meta property="twitter:title" content={`${pageTitle} | Steve Hill`} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={new URL(image, Astro.site)} />
		
		<!-- RSS Feed -->
		<link rel="alternate" type="application/rss+xml" title="Steve Hill's Blog" href="/rss.xml" />
		
		<title>{pageTitle} | Steve Hill</title>
		<ViewTransitions />
	</head>
	<body>
		<SiteHeader />
		<main>
			<slot />
		</main>
		<style is:global>
			:root {
				/* Typography scale */
				--font-size-xs: 0.75rem;
				--font-size-sm: 0.875rem;
				--font-size-base: 1rem;
				--font-size-lg: 1.125rem;
				--font-size-xl: 1.25rem;
				--font-size-2xl: 1.5rem;
				--font-size-3xl: 1.875rem;
				--font-size-4xl: 2.25rem;
				--font-size-5xl: 3rem;
				
				/* Line heights */
				--line-height-tight: 1.25;
				--line-height-snug: 1.375;
				--line-height-normal: 1.5;
				--line-height-relaxed: 1.625;
				--line-height-loose: 1.75;
				
				/* Font weights */
				--font-weight-normal: 400;
				--font-weight-medium: 500;
				--font-weight-semibold: 600;
				--font-weight-bold: 700;
				
				/* Spacing */
				--spacing-xs: 0.5rem;
				--spacing-sm: 0.75rem;
				--spacing-md: 1rem;
				--spacing-lg: 1.5rem;
				--spacing-xl: 2rem;
				--spacing-2xl: 3rem;
				
				/* Content width */
				--content-width: 65ch;
				--wide-content-width: 80ch;
			}
			
			body {
				font-family: 'Lato', system-ui, sans-serif;
				background: linear-gradient(135deg, #e0e7ef 0%, #c9d6ff 50%, #e2e2e2 100%);
				color: #222;
				margin: 0;
				min-height: 100vh;
				font-size: var(--font-size-lg);
				line-height: var(--line-height-relaxed);
				text-rendering: optimizeLegibility;
				-webkit-font-smoothing: antialiased;
				-moz-osx-font-smoothing: grayscale;
			}
			
			main {
				max-width: 800px;
				margin: 2rem auto;
				padding: 2rem 2.5rem;
				background: #fff;
				border-radius: 1rem;
				box-shadow: 0 2px 16px rgba(0,0,0,0.07);
			}
			
			/* Prose content */
			article {
				max-width: var(--content-width);
				margin: 0 auto;
			}
			
			/* Headings */
			h1, h2, h3, h4, h5, h6 {
				color: #111;
				line-height: var(--line-height-tight);
				letter-spacing: -0.02em;
			}
			
			h1 {
				font-family: 'Montserrat', system-ui, sans-serif;
				font-weight: var(--font-weight-bold);
				font-size: var(--font-size-4xl);
				margin-top: 0;
				margin-bottom: var(--spacing-lg);
			}
			
			h2 {
				font-family: 'Inter', system-ui, sans-serif;
				font-weight: var(--font-weight-semibold);
				font-size: var(--font-size-3xl);
				margin-top: var(--spacing-2xl);
				margin-bottom: var(--spacing-md);
			}
			
			h3 {
				font-family: 'Inter', system-ui, sans-serif;
				font-weight: var(--font-weight-semibold);
				font-size: var(--font-size-2xl);
				margin-top: var(--spacing-xl);
				margin-bottom: var(--spacing-sm);
			}
			
			h4 {
				font-family: 'Inter', system-ui, sans-serif;
				font-weight: var(--font-weight-semibold);
				font-size: var(--font-size-xl);
				margin-top: var(--spacing-lg);
				margin-bottom: var(--spacing-sm);
			}
			
			/* Paragraphs and lists */
			p {
				font-size: var(--font-size-lg);
				line-height: var(--line-height-relaxed);
				margin-bottom: var(--spacing-lg);
				color: #333;
			}
			
			ul, ol {
				font-size: var(--font-size-lg);
				line-height: var(--line-height-relaxed);
				margin-bottom: var(--spacing-lg);
				padding-left: var(--spacing-xl);
			}
			
			li {
				margin-bottom: var(--spacing-xs);
			}
			
			/* Links */
			a {
				color: #0066cc;
				text-decoration: none;
				font-weight: var(--font-weight-medium);
				transition: color 0.2s;
				text-underline-offset: 0.2em;
			}
			
			a:hover {
				color: #0052a3;
				text-decoration: underline;
			}
			
			/* Code */
			code, pre {
				font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', 'Consolas', monospace;
			}
			
			/* Improve readability for long content */
			article p,
			article li {
				max-width: var(--content-width);
			}
			
			/* Better spacing between paragraphs and lists */
			p + ul,
			p + ol,
			ul + p,
			ol + p {
				margin-top: var(--spacing-lg);
			}
			.post-list {
				list-style: none;
				padding: 0;
			}
			.post-list li {
				margin-bottom: var(--spacing-xl);
				padding-bottom: var(--spacing-xl);
				border-bottom: 1px solid #eee;
			}
			.post-list li:last-child {
				border-bottom: none;
			}
			.post-title {
				font-size: var(--font-size-2xl);
				font-weight: var(--font-weight-semibold);
				margin-bottom: var(--spacing-xs);
				line-height: var(--line-height-tight);
			}
			.post-title a {
				color: #111;
				text-decoration: none;
			}
			.post-title a:hover {
				color: #0066cc;
				text-decoration: none;
			}
			.post-meta {
				font-size: var(--font-size-sm);
				color: #666;
				margin-bottom: var(--spacing-sm);
				font-weight: var(--font-weight-normal);
			}
			.post-excerpt {
				color: #444;
				line-height: var(--line-height-relaxed);
				font-size: var(--font-size-base);
				max-width: var(--content-width);
			}
			.tags {
				display: flex;
				flex-wrap: wrap;
				gap: var(--spacing-xs);
				margin-top: var(--spacing-sm);
			}
			.tag {
				background: #f0f0f0;
				padding: 0.25rem 0.625rem;
				border-radius: 0.375rem;
				font-size: var(--font-size-sm);
				color: #555;
				text-decoration: none;
				transition: all 0.2s;
				font-weight: var(--font-weight-medium);
			}
			.tag:hover {
				background: #e0e0e0;
				color: #333;
				text-decoration: none;
			}
		</style>
	</body>
</html>