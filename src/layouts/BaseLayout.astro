---
import { ViewTransitions } from 'astro:transitions';
import SiteHeader from '../components/SiteHeader.astro';
import SiteFooter from '../components/SiteFooter.astro';

interface Props {
	pageTitle: string;
	description?: string;
	image?: string;
	type?: string;
}

const {
	pageTitle,
	description = "Senior software engineer specializing in technical rescue, legacy systems, and teaching assembly language since 2006.",
	image = "/favicon.svg",
	type = "website"
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---
<!doctype html>
<html lang="en" data-theme="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&family=Lato:wght@400;700&family=Montserrat:wght@700;900&display=swap" rel="stylesheet" />
		
		<!-- Canonical URL -->
		<link rel="canonical" href={canonicalURL} />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content={type} />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={`${pageTitle} | Steve Hill`} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={new URL(image, Astro.site)} />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={canonicalURL} />
		<meta property="twitter:title" content={`${pageTitle} | Steve Hill`} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={new URL(image, Astro.site)} />
		
		<!-- RSS Feed -->
		<link rel="alternate" type="application/rss+xml" title="Steve Hill's Blog" href="/rss.xml" />
		
		<title>{pageTitle} | Steve Hill</title>
		<ViewTransitions fallback="swap" />

		<script>
			// Enhanced view transitions
			document.addEventListener('astro:page-load', () => {
				// Reinitialize any interactive components after navigation
				// This ensures functionality works after view transitions

				// Re-initialize mobile menu toggle if it exists
				const mobileToggle = document.querySelector('.mobile-menu-toggle');
				if (mobileToggle && !mobileToggle.hasAttribute('data-initialized')) {
					mobileToggle.setAttribute('data-initialized', 'true');
					// Mobile menu functionality will be handled by the SiteHeader component
				}
			});
			
			// Add transition direction based on navigation
			document.addEventListener('astro:before-preparation', (event) => {
				const fromUrl = event.from?.pathname || '';
				const toUrl = event.to?.pathname || '';
				
				// Determine transition direction
				let direction = 'forward';
				
				// Going back to blog list from post
				if (fromUrl.startsWith('/blog/') && toUrl === '/blog') {
					direction = 'back';
				}
				// Going back to home from any page
				else if (toUrl === '/' && fromUrl !== '/') {
					direction = 'back';
				}
				// Going to a post from blog list
				else if (fromUrl === '/blog' && toUrl.startsWith('/blog/')) {
					direction = 'forward';
				}
				
				// Apply direction class for CSS to use
				document.documentElement.setAttribute('data-transition-direction', direction);
			});
			
			// Clean up after transition
			document.addEventListener('astro:after-swap', () => {
				document.documentElement.removeAttribute('data-transition-direction');
			});
		</script>
	</head>
	<body>
		<SiteHeader />
		<main data-pagefind-body style="view-transition-name: main-content;">
			<slot />
		</main>
		<SiteFooter />
		<style is:global>
			*, *::before, *::after {
				box-sizing: border-box;
			}

			:root {
				/* Typography scale */
				--font-size-xs: 0.75rem;
				--font-size-sm: 0.875rem;
				--font-size-base: 1rem;
				--font-size-lg: 1.125rem;
				--font-size-xl: 1.25rem;
				--font-size-2xl: 1.5rem;
				--font-size-3xl: 1.875rem;
				--font-size-4xl: 2.25rem;
				--font-size-5xl: 3rem;

				/* Line heights */
				--line-height-tight: 1.25;
				--line-height-snug: 1.375;
				--line-height-normal: 1.5;
				--line-height-relaxed: 1.625;
				--line-height-loose: 1.75;

				/* Font weights */
				--font-weight-normal: 400;
				--font-weight-medium: 500;
				--font-weight-semibold: 600;
				--font-weight-bold: 700;

				/* Spacing */
				--spacing-xs: 0.5rem;
				--spacing-sm: 0.75rem;
				--spacing-md: 1rem;
				--spacing-lg: 1.5rem;
				--spacing-xl: 2rem;
				--spacing-2xl: 3rem;

				/* Content width */
				--content-width: 65ch;
				--wide-content-width: 80ch;

				/* Border radius */
				--radius-sm: 0.25rem;
				--radius-md: 0.375rem;
				--radius-lg: 0.5rem;
				--radius-xl: 0.75rem;
				--radius-2xl: 1rem;
				--radius-full: 9999px;

				/* Transitions */
				--transition-fast: 150ms cubic-bezier(0.4, 0, 0.2, 1);
				--transition-base: 200ms cubic-bezier(0.4, 0, 0.2, 1);
				--transition-slow: 300ms cubic-bezier(0.4, 0, 0.2, 1);

				/* Colors - Dark-only theme optimized for bold gradients */
				--color-bg-primary: #0a0a0a;      /* Near-black base */
				--color-bg: #0f0f0f;
				--color-bg-secondary: #171717;
				--color-bg-surface: #1a1a1a;      /* Cards/elevated surfaces */
				--color-bg-tertiary: #262626;     /* Subtle variations */
				--color-surface: #1a1a1a;
				--color-surface-hover: #262626;
				--color-border: #404040;
				--color-border-hover: #525252;

				--color-text-primary: #f3f4f6;    /* High contrast white */
				--color-text-secondary: #d1d5db;  /* Readable gray */
				--color-text-tertiary: #9ca3af;   /* Muted gray */
				--color-text-muted: #6b7280;

				--color-primary: #60a5fa;
				--color-primary-hover: #93bbfc;
				--color-primary-light: #1e3a5f;
				--color-primary-dark: #93bbfc;

				--color-accent: #a78bfa;
				--color-accent-hover: #c4b5fd;
				--color-accent-light: #2e1065;

				--color-success: #10b981;
				--color-warning: #f59e0b;
				--color-error: #ef4444;

				/* Gradient Palettes */
				--gradient-sunrise: linear-gradient(135deg, #8b5cf6 0%, #ec4899 100%);
				--gradient-sunrise-vibrant: linear-gradient(135deg, #a78bfa 0%, #f472b6 50%, #fb923c 100%);
				--gradient-ocean: linear-gradient(135deg, #3b82f6 0%, #06b6d4 100%);
				--gradient-sunset: linear-gradient(135deg, #f59e0b 0%, #ef4444 100%);
				--gradient-forest: linear-gradient(135deg, #10b981 0%, #14b8a6 100%);
				--gradient-tropical: linear-gradient(135deg, #ec4899 0%, #f97316 100%);
				--gradient-cosmic: linear-gradient(135deg, #8b5cf6 0%, #6366f1 100%);
				--gradient-neon: linear-gradient(135deg, #06b6d4 0%, #3b82f6 100%);

				/* Gradient colors for fine-grained control */
				--color-purple: #8b5cf6;
				--color-pink: #ec4899;
				--color-blue: #3b82f6;
				--color-cyan: #06b6d4;
				--color-orange: #f59e0b;
				--color-red: #ef4444;
				--color-green: #10b981;
				--color-teal: #14b8a6;

				/* Shadows */
				--shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.3);
				--shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.4), 0 2px 4px -1px rgba(0, 0, 0, 0.3);
				--shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.4), 0 4px 6px -2px rgba(0, 0, 0, 0.3);
				--shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.4), 0 10px 10px -5px rgba(0, 0, 0, 0.3);
			}
			
			html {
				overflow-x: hidden;
			}

			body {
				font-family: 'Inter', system-ui, sans-serif;
				background: var(--color-bg-secondary);
				color: var(--color-text-primary);
				margin: 0;
				min-height: 100vh;
				font-size: var(--font-size-lg);
				line-height: var(--line-height-relaxed);
				text-rendering: optimizeLegibility;
				-webkit-font-smoothing: antialiased;
				-moz-osx-font-smoothing: grayscale;
				display: flex;
				flex-direction: column;
				overflow-x: hidden;
			}

			main {
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 var(--spacing-md) var(--spacing-xl) var(--spacing-md);
				background: transparent;
				flex: 1;
				width: 100%;
				box-sizing: border-box;
			}

			@media (min-width: 768px) {
				main {
					padding: 0 var(--spacing-lg) var(--spacing-2xl) var(--spacing-lg);
				}
			}
			
			/* Prose content */
			article {
				max-width: var(--content-width);
				margin: 0 auto;
			}
			
			/* Headings */
			h1, h2, h3, h4, h5, h6 {
				color: var(--color-text-primary);
				line-height: var(--line-height-tight);
				letter-spacing: -0.02em;
			}
			
			h1 {
				font-family: 'Montserrat', system-ui, sans-serif;
				font-weight: var(--font-weight-bold);
				font-size: var(--font-size-4xl);
				margin-top: 0;
				margin-bottom: var(--spacing-lg);
			}
			
			h2 {
				font-family: 'Inter', system-ui, sans-serif;
				font-weight: var(--font-weight-semibold);
				font-size: var(--font-size-3xl);
				margin-top: var(--spacing-2xl);
				margin-bottom: var(--spacing-md);
			}
			
			h3 {
				font-family: 'Inter', system-ui, sans-serif;
				font-weight: var(--font-weight-semibold);
				font-size: var(--font-size-2xl);
				margin-top: var(--spacing-xl);
				margin-bottom: var(--spacing-sm);
			}
			
			h4 {
				font-family: 'Inter', system-ui, sans-serif;
				font-weight: var(--font-weight-semibold);
				font-size: var(--font-size-xl);
				margin-top: var(--spacing-lg);
				margin-bottom: var(--spacing-sm);
			}
			
			/* Paragraphs and lists */
			p {
				font-size: var(--font-size-lg);
				line-height: var(--line-height-relaxed);
				margin-bottom: var(--spacing-lg);
				color: var(--color-text-secondary);
			}
			
			ul, ol {
				font-size: var(--font-size-lg);
				line-height: var(--line-height-relaxed);
				margin-bottom: var(--spacing-lg);
				padding-left: var(--spacing-xl);
			}
			
			li {
				margin-bottom: var(--spacing-xs);
			}
			
			/* Links */
			a {
				color: var(--color-primary);
				text-decoration: none;
				font-weight: var(--font-weight-medium);
				transition: all 0.2s;
				text-underline-offset: 0.2em;
			}
			
			a:hover {
				color: var(--color-primary-hover);
				text-decoration: underline;
			}
			
			/* Code */
			code, pre {
				font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', 'Consolas', monospace;
			}
			
			/* Improve readability for long content */
			article p,
			article li {
				max-width: var(--content-width);
			}
			
			/* Better spacing between paragraphs and lists */
			p + ul,
			p + ol,
			ul + p,
			ol + p {
				margin-top: var(--spacing-lg);
			}
			.post-list {
				list-style: none;
				padding: 0;
			}
			.post-list li {
				margin-bottom: var(--spacing-xl);
				padding-bottom: var(--spacing-xl);
				border-bottom: 1px solid var(--color-border);
			}
			.post-list li:last-child {
				border-bottom: none;
			}
			.post-title {
				font-size: var(--font-size-2xl);
				font-weight: var(--font-weight-semibold);
				margin-bottom: var(--spacing-xs);
				line-height: var(--line-height-tight);
			}
			.post-title a {
				color: var(--color-text-primary);
				text-decoration: none;
			}
			.post-title a:hover {
				color: var(--color-primary);
				text-decoration: none;
			}
			.post-meta {
				font-size: var(--font-size-sm);
				color: var(--color-text-tertiary);
				margin-bottom: var(--spacing-sm);
				font-weight: var(--font-weight-normal);
			}
			.post-excerpt {
				color: var(--color-text-secondary);
				line-height: var(--line-height-relaxed);
				font-size: var(--font-size-base);
				max-width: var(--content-width);
			}
			.tags {
				display: flex;
				flex-wrap: wrap;
				gap: var(--spacing-xs);
				margin-top: var(--spacing-sm);
			}
			.tag {
				background: var(--color-bg-tertiary);
				padding: 0.25rem 0.625rem;
				border-radius: var(--radius-md);
				font-size: var(--font-size-sm);
				color: var(--color-text-secondary);
				text-decoration: none;
				transition: all 0.2s;
				font-weight: var(--font-weight-medium);
				border: 1px solid transparent;
			}
			.tag:hover {
				background: var(--color-primary-light);
				color: var(--color-primary-dark);
				text-decoration: none;
				border-color: var(--color-primary);
			}
			
			/* Animations */
			@keyframes fadeIn {
				from {
					opacity: 0;
					transform: translateY(10px);
				}
				to {
					opacity: 1;
					transform: translateY(0);
				}
			}
			
			@keyframes slideIn {
				from {
					opacity: 0;
					transform: translateX(-20px);
				}
				to {
					opacity: 1;
					transform: translateX(0);
				}
			}
			
			/* Apply fade-in to main content */
			main > * {
				animation: fadeIn var(--transition-slow) ease-out;
			}
			
			/* Stagger animations for lists */
			.card-grid > *,
			.project-grid > * {
				animation: fadeIn var(--transition-slow) ease-out;
				animation-fill-mode: both;
			}
			
			.card-grid > *:nth-child(1) { animation-delay: 0ms; }
			.card-grid > *:nth-child(2) { animation-delay: 50ms; }
			.card-grid > *:nth-child(3) { animation-delay: 100ms; }
			.card-grid > *:nth-child(4) { animation-delay: 150ms; }
			.card-grid > *:nth-child(5) { animation-delay: 200ms; }
			.card-grid > *:nth-child(6) { animation-delay: 250ms; }
			
			/* Smooth scroll behavior */
			html {
				scroll-behavior: smooth;
			}
			
			/* Add hover scale to interactive elements */
			button,
			.card,
			.project-card,
			.social-link {
				transition: transform var(--transition-fast);
			}
			
			button:active,
			.social-link:active {
				transform: scale(0.95);
			}
			
			/* Improve focus states */
			a:focus-visible,
			button:focus-visible {
				outline: 2px solid var(--color-primary);
				outline-offset: 2px;
			}
			
			/* Code block styling */
			.astro-code,
			.astro-code span {
				color: var(--shiki-dark, inherit) !important;
				background-color: var(--shiki-dark-bg, inherit) !important;
			}

			.enhanced-code-block {
				background: #0f172a;
			}

			.code-toolbar {
				background: #0f172a;
				border-bottom-color: #1e293b;
			}

			:not(pre) > code {
				background: var(--color-bg-tertiary);
				color: var(--color-accent);
			}

			/* CSS Highlights API - Syntax Highlighting */
			::highlight(token-comment) {
				color: #6a9955;
				font-style: italic;
			}

			::highlight(token-keyword) {
				color: #569cd6;
				font-weight: 600;
			}

			::highlight(token-string) {
				color: #ce9178;
			}

			::highlight(token-number) {
				color: #b5cea8;
			}

			::highlight(token-function) {
				color: #dcdcaa;
			}

			::highlight(token-class-name) {
				color: #4ec9b0;
			}

			::highlight(token-operator) {
				color: #d4d4d4;
			}

			::highlight(token-punctuation) {
				color: #d4d4d4;
			}

			::highlight(token-variable) {
				color: #9cdcfe;
			}

			::highlight(token-constant) {
				color: #4fc1ff;
			}

			::highlight(token-property) {
				color: #9cdcfe;
			}

			::highlight(token-tag) {
				color: #569cd6;
			}

			::highlight(token-attr-name) {
				color: #9cdcfe;
			}

			::highlight(token-attr-value) {
				color: #ce9178;
			}

			::highlight(token-builtin) {
				color: #4ec9b0;
			}

			::highlight(token-regex) {
				color: #d16969;
			}

			::highlight(token-important) {
				color: #569cd6;
				font-weight: bold;
			}

			::highlight(token-boolean) {
				color: #569cd6;
			}

			::highlight(token-null) {
				color: #569cd6;
			}

			::highlight(token-selector) {
				color: #d7ba7d;
			}

			::highlight(token-char) {
				color: #ce9178;
			}

			::highlight(token-deleted) {
				color: #f44747;
			}

			::highlight(token-inserted) {
				color: #608b4e;
			}

			/* View Transitions */
			@media (prefers-reduced-motion: no-preference) {
				::view-transition-old(root),
				::view-transition-new(root) {
					animation-duration: 300ms;
					animation-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
				}
				
				/* Default forward navigation */
				::view-transition-old(main-content) {
					animation: slideOutLeft 300ms cubic-bezier(0.4, 0, 0.2, 1);
				}
				
				::view-transition-new(main-content) {
					animation: slideInRight 300ms cubic-bezier(0.4, 0, 0.2, 1);
				}
				
				/* Reverse navigation (back button) */
				[data-transition-direction="back"] ::view-transition-old(main-content) {
					animation: slideOutRight 300ms cubic-bezier(0.4, 0, 0.2, 1);
				}
				
				[data-transition-direction="back"] ::view-transition-new(main-content) {
					animation: slideInLeft 300ms cubic-bezier(0.4, 0, 0.2, 1);
				}
				
				@keyframes slideOutLeft {
					from {
						opacity: 1;
						transform: translateX(0);
					}
					to {
						opacity: 0;
						transform: translateX(-20px);
					}
				}
				
				@keyframes slideInRight {
					from {
						opacity: 0;
						transform: translateX(20px);
					}
					to {
						opacity: 1;
						transform: translateX(0);
					}
				}
				
				@keyframes slideOutRight {
					from {
						opacity: 1;
						transform: translateX(0);
					}
					to {
						opacity: 0;
						transform: translateX(20px);
					}
				}
				
				@keyframes slideInLeft {
					from {
						opacity: 0;
						transform: translateX(-20px);
					}
					to {
						opacity: 1;
						transform: translateX(0);
					}
				}
				
				/* Special transitions for blog posts */
				::view-transition-old(blog-post),
				::view-transition-new(blog-post) {
					animation-duration: 400ms;
				}
				
				::view-transition-old(blog-post) {
					animation: fadeSlideOut 400ms cubic-bezier(0.4, 0, 0.2, 1);
				}
				
				::view-transition-new(blog-post) {
					animation: fadeSlideIn 400ms cubic-bezier(0.4, 0, 0.2, 1);
				}
				
				@keyframes fadeSlideOut {
					from {
						opacity: 1;
						transform: translateY(0) scale(1);
					}
					to {
						opacity: 0;
						transform: translateY(-10px) scale(0.98);
					}
				}
				
				@keyframes fadeSlideIn {
					from {
						opacity: 0;
						transform: translateY(10px) scale(0.98);
					}
					to {
						opacity: 1;
						transform: translateY(0) scale(1);
					}
				}
				
				/* Enhanced fade for faster transitions */
				::view-transition-old(fade-fast),
				::view-transition-new(fade-fast) {
					animation-duration: 200ms;
				}
			}
			
			/* Respect motion preferences */
			@media (prefers-reduced-motion: reduce) {
				::view-transition-old(root),
				::view-transition-new(root),
				::view-transition-old(main-content),
				::view-transition-new(main-content),
				::view-transition-old(blog-post),
				::view-transition-new(blog-post) {
					animation: none !important;
				}
			}
		</style>
	</body>
</html>