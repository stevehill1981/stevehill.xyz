---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import { getAllSeries } from '../utils/series.js';

const allPosts = await getCollection('blog');
const allSeries = getAllSeries(allPosts);
---

<BaseLayout pageTitle="Post Series" description="Explore multi-part blog series covering in-depth topics">
	<h1>Post Series</h1>
	<p>In-depth explorations of important topics, broken down into digestible parts.</p>
	
	{allSeries.length === 0 ? (
		<div class="no-series">
			<p>No series available yet. Check back soon!</p>
		</div>
	) : (
		<div class="series-grid">
			{allSeries.map((series) => (
				<article class="series-card">
					<div class="series-card-header">
						<h2 class="series-title">
							ðŸ“š {series.name}
						</h2>
						<div class="series-meta">
							{series.totalParts} part{series.totalParts !== 1 ? 's' : ''}
						</div>
					</div>
					
					<div class="series-posts">
						{series.posts.map((post, index) => (
							<div class="series-post-item">
								<div class="series-post-number">
									Part {post.data.series.part}
								</div>
								<div class="series-post-content">
									<h3 class="series-post-title">
										<a href={`/blog/${post.slug}`}>{post.data.title}</a>
									</h3>
									<p class="series-post-excerpt">{post.data.excerpt}</p>
									<div class="series-post-date">
										{post.data.pubDate.toLocaleDateString('en-US', {
											year: 'numeric',
											month: 'long',
											day: 'numeric'
										})}
									</div>
								</div>
							</div>
						))}
					</div>
				</article>
			))}
		</div>
	)}
</BaseLayout>

<style>
	h1 {
		margin-top: var(--spacing-2xl);
		background: var(--gradient-sunrise);
		background-clip: text;
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}

	.series-grid {
		display: grid;
		gap: var(--spacing-2xl);
		margin-top: var(--spacing-xl);
	}
	
	.series-card {
		background: var(--color-surface);
		border: 1px solid var(--color-border);
		border-radius: var(--radius-lg);
		padding: var(--spacing-xl);
		box-shadow: var(--shadow-sm);
		transition: all var(--transition-fast);
	}
	
	.series-card:hover {
		box-shadow: var(--shadow-md);
		transform: translateY(-2px);
	}
	
	.series-card-header {
		display: flex;
		align-items: center;
		justify-content: space-between;
		margin-bottom: var(--spacing-lg);
		padding-bottom: var(--spacing-md);
		border-bottom: 1px solid var(--color-border);
	}
	
	.series-title {
		font-size: var(--font-size-2xl);
		font-weight: var(--font-weight-semibold);
		color: var(--color-text-primary);
		margin: 0;
	}
	
	.series-meta {
		background: var(--color-primary-light);
		color: var(--color-primary);
		padding: 0.375rem 0.75rem;
		border-radius: var(--radius-md);
		font-size: var(--font-size-sm);
		font-weight: var(--font-weight-medium);
		border: 1px solid var(--color-primary);
	}
	
	.series-posts {
		display: grid;
		gap: var(--spacing-lg);
	}
	
	.series-post-item {
		display: grid;
		grid-template-columns: auto 1fr;
		gap: var(--spacing-md);
		padding: var(--spacing-md);
		background: var(--color-bg-tertiary);
		border-radius: var(--radius-md);
		border: 1px solid var(--color-border);
		transition: all var(--transition-fast);
	}
	
	.series-post-item:hover {
		background: var(--color-surface);
		box-shadow: var(--shadow-sm);
	}
	
	.series-post-number {
		display: flex;
		align-items: center;
		justify-content: center;
		background: var(--color-primary);
		color: white;
		padding: 0.5rem 0.75rem;
		border-radius: var(--radius-md);
		font-size: var(--font-size-sm);
		font-weight: var(--font-weight-semibold);
		white-space: nowrap;
		height: fit-content;
	}
	
	.series-post-content {
		min-width: 0; /* Prevent overflow */
	}
	
	.series-post-title {
		font-size: var(--font-size-lg);
		margin: 0 0 var(--spacing-xs) 0;
		font-weight: var(--font-weight-semibold);
		line-height: var(--line-height-tight);
	}
	
	.series-post-title a {
		color: var(--color-text-primary);
		text-decoration: none;
	}
	
	.series-post-title a:hover {
		color: var(--color-primary);
	}
	
	.series-post-excerpt {
		color: var(--color-text-secondary);
		margin: 0 0 var(--spacing-xs) 0;
		line-height: var(--line-height-relaxed);
		font-size: var(--font-size-base);
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}
	
	.series-post-date {
		color: var(--color-text-tertiary);
		font-size: var(--font-size-sm);
		margin: 0;
	}
	
	.no-series {
		text-align: center;
		padding: var(--spacing-2xl);
		color: var(--color-text-secondary);
	}
	
	@media (max-width: 640px) {
		.series-card-header {
			flex-direction: column;
			align-items: flex-start;
			gap: var(--spacing-sm);
		}
		
		.series-post-item {
			grid-template-columns: 1fr;
			text-align: center;
		}
		
		.series-post-number {
			justify-self: center;
		}
	}
</style>