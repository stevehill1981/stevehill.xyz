---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const projectEntries = await getCollection('projects');
  return projectEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<BaseLayout pageTitle={entry.data.title} description={entry.data.description}>
	<article>
		<h1>{entry.data.title}</h1>
		<p style="font-size: 1.2rem; color: #555; margin-bottom: 1.5rem;">{entry.data.description}</p>
		
		<div class="project-meta">
			<div class="tags">
				{entry.data.technologies.map((tech) => (
					<span class="tag">{tech}</span>
				))}
			</div>
			<a href={entry.data.githubUrl} target="_blank" rel="noopener" class="github-link">
				View on GitHub â†’
			</a>
		</div>
		
		<div class="content">
			<Content />
		</div>
		
		<nav style="margin-top: 3rem; padding-top: 2rem; border-top: 1px solid #eee;">
			<a href="/projects">&larr; Back to Projects</a>
		</nav>
	</article>
</BaseLayout>

<style>
	.project-meta {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin: 1.5rem 0 2rem 0;
		padding-bottom: 1.5rem;
		border-bottom: 1px solid #eee;
	}
	.github-link {
		font-weight: 600;
		color: #333;
	}
	.content {
		margin-top: 2rem;
	}
	.content :global(h2) {
		margin-top: 2.5rem;
		margin-bottom: 1rem;
	}
	.content :global(h3) {
		margin-top: 2rem;
		margin-bottom: 0.8rem;
	}
	.content :global(pre) {
		background: #f8f8f8;
		padding: 1rem;
		border-radius: 0.5rem;
		overflow-x: auto;
		margin: 1.5rem 0;
	}
	.content :global(code) {
		background: #f0f0f0;
		padding: 0.2rem 0.4rem;
		border-radius: 0.3rem;
		font-size: 0.9em;
	}
	.content :global(pre code) {
		background: none;
		padding: 0;
	}
</style>